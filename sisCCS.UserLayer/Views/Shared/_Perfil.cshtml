@model sisCCS.EntityLayer.EPerfil

<div class="modal-dialog" id="mdPerfil">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="mfp-close">&times;</button>
            <h4 class="modal-title">Perfil de Usuario</h4>
        </div>
        <div class="modal-body">
            <div class="tab-v2">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#info-user" data-toggle="tab">Informaci&oacute;n del Perfil de Usuario</a></li>
                </ul>
                <div class="tab-content sky-form" id="dvRegistro">
                    <div class="tab-pane fade in active" id="info-user">
                        @using (Html.BeginForm("RegistrarPerfil", "Seguridad", FormMethod.Post, new { @id = "FrmPerfil" }))
                        {
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group">
                                <label class="control-label">Nombre del Perfil de Usuario</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control input-sm no-null" })
                            </div>
                        }
                        <button id="btnGrabar" class="btn-u btn-u-green">Grabar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var Perfil = {
        Vars: {
            Formulario: $('#FrmPerfil')
        }
    }
</script>
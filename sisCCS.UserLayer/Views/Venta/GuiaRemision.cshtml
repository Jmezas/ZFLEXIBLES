                            <div class="tab-v2">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#" data-toggle="tab">Detalle</a></li>
                                </ul>
                                <div class="tab-content sky-form">
                                    <div class="row">
                                        <div class="form-group">
                                            <table class="table table-bordered" id="tbDetalle">

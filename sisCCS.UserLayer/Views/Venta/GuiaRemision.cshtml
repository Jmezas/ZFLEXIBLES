                <button type="button" class="close" id="btnCerrar" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="tab-v2">
                <div class="tab-content sky-form">
                    <div class="" id="info" name="info">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Cliente</label>
                                    <input type="text" id="txtCliente" name="txtCliente" class="form-control" />
                                </div>

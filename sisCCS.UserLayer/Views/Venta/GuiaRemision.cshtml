                                    <div class="tab-pane fade in active" id="info" name="info">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Comprobante de pago</label>
                                                    <button class="btn-u btn-u-dark-blue btn-block" id="btnBuscarCot"><i class="fa fa-plus-circle"></i> Seleccionar Comprobante</button>

